generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// npx prisma migrate dev
// npx prisma generate
// (abrir arquivo node_modules/.prisma/client/index.d.ts)

model Student {
  id         String   @id @default(uuid())
  name       String
  course     String
  university String
  term       String
  email      String   @unique
  password   String
  created_at DateTime @default(now())

  @@map("students")
}

model Subject {
  id         String   @id @default(uuid())
  name       String
  syllabus   String
  created_at DateTime @default(now())

  @@map("subjects")
}
